{
    "initializeCommand": "/usr/bin/env bash .devcontainer/initialize",
    "postCreateCommand": "/usr/bin/env bash .devcontainer/postcreate",
    "build": {
        "dockerfile": "Dockerfile",
        "options": [
            "--platform=linux/arm64"
        ]
    },
    "mounts": [
        "type=volume,source=${localWorkspaceFolderBasename}-workdir,target=/home/ubuntu/workdir",
        "type=bind,readonly,source=${localEnv:HOME}/.ssh/id_ed25519,target=/home/ubuntu/.ssh/id_ed25519",
        "type=bind,readonly,source=${localEnv:HOME}/.ssh/id_ed25519.pub,target=/home/ubuntu/.ssh/id_ed25519.pub"
    ],
    "runArgs": [
        "--platform=linux/arm64"
    ],
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "redhat.vscode-xml",
                "github.copilot"
            ]
        }
    },
    "remoteEnv": {
        "LANG": "en_US.UTF-8"
    }
}
